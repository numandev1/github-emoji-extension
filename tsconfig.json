{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/pages/Content/components/*"
      ],
      "@entities/*": [
        "./src/pages/Content/entities/*"
      ],
      "@hooks/*": [
        "./src/pages/Content/hooks/*"
      ],
      "@utils/*": [
        "./src/pages/Content/utils/*"
      ],
      "@loaders/*": [
        "./src/pages/Content/loaders/*"
      ]
    }
  },
  "include": [
    "src",
    "custom.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
